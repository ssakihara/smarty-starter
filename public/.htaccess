# https://qiita.com/ucan-lab/items/0d74378e1b9ba81699a9
php_value zend.exception_ignore_args off
php_value expose_php on
php_value max_execution_time 30
php_value max_input_vars 1000
php_value upload_max_filesize 64M
php_value post_max_size 128M
php_value memory_limit 256M
php_value error_reporting 6135
php_value display_errors on
php_value display_startup_errors on
php_value log_errors on
php_value error_log /var/www/logs/php/error.log
php_value default_charset UTF-8
php_value date.timezone Asia/Tokyo
php_value mysqlnd.collect_memory_statistics on
php_value zend.assertions 1
php_value mbstring.language Japanese

php_value auto_prepend_file /var/www/bootstrap.php

<IfModule mod_rewrite.c>
    RewriteEngine on
</IfModule>